<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cericoil : Login</title>
    <link rel="stylesheet" href="/assets/styles/main.css">
    <link rel="icon" type="image/svg" href="/assets/img/logo_blue.svg"/>
    <script src="/assets/scripts/script.js" defer></script>
</head>
<body class="auth">
    <div class="logo">
        <img src="/assets/img/logo.svg" alt="Logo">
        <h2>Cericoil</h2>
    </div>
    <div class="formContainer">
        <h3>Login</h3>
        <form action="/" method="POST">
            {{#each errorList}}
                <p class="error-message">{{message}}</p>
            {{/each}}
            {{#if message}}
                <p class="error-message">{{message}}</p>
            {{/if}}
            {{#if error}}
                <p class="error-message">{{error}}</p>
            {{/if}}
            <input type="email" name="mailUser" placeholder="Email">
            <input type="password" name="passUser"  placeholder="Password">
            <button>Login</button>
        </form>
        <p>No account yet ? <a href="register">Create an account</a></p>
    </div>
</body>
</html>